#!/usr/bin/env fift -s
"TonUtil.fif" include
"Asm.fif" include

{ ."usage: " @' $0 type ." <spender_addr_file> <amount>" cr
  ."Creates an increase allowance message body" cr 1 halt
} : usage
$# 2- -2 and ' usage if

$1 load-address 2dup 2constant spender_addr
$2 $>GR =: amount

<b 3 32 u, 0 64 u, 0 1 u, spender_addr addr, amount Gram, b> =: body_boc
body_boc <s csr.
body_boc 2 boc+>B
"increase-allowance.boc" tuck B>file
."(Saved query to file " type .")" cr
